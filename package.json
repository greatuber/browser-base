{
  "name": "wexond",
  "version": "0.1.0",
  "description": "Extensible, fast and innovative web browser with material UI.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nersent/wexond.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=dev electron main.js",
    "watch": "npm run build:dev && webpack-dev-server --hot --inline --port 8080 --colors --progress",
    "build:dev": "rimraf build && webpack",
    "build:production": "rimraf build && cross-env NODE_ENV=production webpack --define process.env.NODE_ENV=production --progress --colors",
    "compile:win64": "npm run build:production && electron-packager . --platform=win32 --arch=x64 Wexond --asar --overwrite --out=dist",
    "compile:win32": "npm run build:production && electron-packager . --platform=win32 --arch=ia32 Wexond --asar --overwrite --out=dist",
    "compile:linux64": "npm run build:production && electron-packager . --platform=linux --arch=x64 Wexond --asar --overwrite --out=dist",
    "compile:linux32": "npm run build:production && electron-packager . --platform=linux --arch=ia32 Wexond --asar --overwrite --out=dist",
    "compile:darwin64": "npm run build:production && electron-packager . --platform=darwin --arch=x64 Wexond --asar --overwrite --out=dist",
    "compile:darwin32": "npm run build:production && electron-packager . --platform=darwin --arch=ia32 Wexond --asar --overwrite --out=dist",
    "compile:all": "npm run build:production && electron-packager . --all Wexond --asar --overwrite --out=dist"
  },
  "homepage": "https://github.com/Nersent/wexond#readme",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "web-browser",
    "webpack",
    "material",
    "electron",
    "inferno",
    "mobx",
    "sass"
  ],
  "bugs": {
    "url": "https://github.com/Nersent/wexond/issues"
  },
  "author": "Nersent",
  "license": "Apache-2.0",
  "dependencies": {
    "babel-preset-es2017": "latest",
    "electron": "1.8.2-beta.3"
  },
  "devDependencies": {
    "babel-core": "latest",
    "babel-loader": "latest",
    "babel-plugin-inferno": "latest",
    "babel-plugin-syntax-jsx": "latest",
    "babel-plugin-transform-decorators-legacy": "latest",
    "babel-preset-stage-0": "latest",
    "cross-env": "latest",
    "css-loader": "latest",
    "electron-packager": "latest",
    "inferno": "latest",
    "inferno-component": "latest",
    "inferno-mobx": "latest",
    "mobx": "latest",
    "node-sass": "latest",
    "rimraf": "latest",
    "sass-loader": "latest",
    "style-loader": "latest",
    "uglifyjs-webpack-plugin": ">=1.0.0-beta.2",
    "url-loader": "latest",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  }
}
