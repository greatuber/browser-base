{
  "appId": "org.wexond.wexond",
  "productName": "Wexond",
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "static/icons"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "wexond",
      "repo": "wexond"
    }
  ],
  "linux": {
    "category": "Network",
    "target": [
      {
        "target": "deb",
        "arch": ["ia32", "x64"]
      },
      {
        "target": "AppImage",
        "arch": ["ia32", "x64"]
      }
    ]
  },
  "win": {
    "target": ["zip", "nsis"]
  },
  "mac": {
    "category": "public.app-category.navigation"
  }
}
